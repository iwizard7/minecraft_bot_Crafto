{
  "agent_type": "ReAct",
  "llm_provider": "ollama",
  "model_name": "qwen2.5:7b",
  "temperature": 0.7,
  "max_tokens": 2000,
  "chain_config": {
    "verbose": false,
    "return_intermediate_steps": true,
    "max_iterations": 10
  },
  "memory": {
    "type": "conversational_buffer_window",
    "max_token_limit": 4096,
    "vector_store": {
      "enabled": true,
      "dimensions": 384,
      "similarity_threshold": 0.7
    }
  },
  "tools": [
    {
      "name": "build",
      "description": "Build structures in Minecraft",
      "return_direct": false
    },
    {
      "name": "mine",
      "description": "Mine blocks and gather resources",
      "return_direct": false
    },
    {
      "name": "attack",
      "description": "Combat and defense actions",
      "return_direct": false
    },
    {
      "name": "pathfind",
      "description": "Navigate to specific locations",
      "return_direct": false
    }
  ],
  "prompt_template": {
    "system": "You are an autonomous AI agent controlling a Minecraft character named {crafto_name}. Use the ReAct framework to reason about tasks and select appropriate actions.",
    "human": "{input}\n\nCurrent position: {position}\nRecent memories: {memory}",
    "variables": ["crafto_name", "input", "position", "memory"]
  }
}

